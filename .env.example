# SurgiScan Document Processing Microservice - Environment Configuration
# Copy this file to .env and configure your values

# =============================================================================
# CORE APPLICATION SETTINGS
# =============================================================================

# Application Environment
DEBUG=false
LOG_LEVEL=INFO
SECRET_KEY=your-super-secret-key-here
API_KEY=your-api-key-for-authentication

# Server Configuration
HOST=0.0.0.0
PORT=8000

# CORS Origins (comma-separated)
CORS_ORIGINS=https://surgiscan.com,https://your-frontend.com

# =============================================================================
# AI PROCESSING CONFIGURATION
# =============================================================================

# Required: Landing AI API Key for document processing
LANDING_AI_API_KEY=your-landing-ai-api-key

# Optional: OpenAI API Key for enhanced processing
OPENAI_API_KEY=your-openai-api-key

# Processing Settings
MAX_FILE_SIZE_MB=50
DEFAULT_PROCESSING_MODE=smart
PROCESSING_TIMEOUT_SECONDS=300
MAX_CONCURRENT_PROCESSING=10

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# MongoDB Connection
MONGODB_URL=mongodb://localhost:27017
DATABASE_NAME=surgiscan_documents

# =============================================================================
# FILE STORAGE CONFIGURATION
# =============================================================================

# Storage Type: local, s3, or gcs
STORAGE_TYPE=local

# AWS S3 Configuration (if using S3)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_BUCKET_NAME=surgiscan-documents

# Google Cloud Storage Configuration (if using GCS)
GOOGLE_CLOUD_PROJECT=your-project-id
GCS_BUCKET_NAME=surgiscan-documents

# =============================================================================
# MONITORING & LOGGING
# =============================================================================

# Sentry Error Tracking (optional)
SENTRY_DSN=your-sentry-dsn-here

# Enable Metrics Collection
ENABLE_METRICS=true

# =============================================================================
# RATE LIMITING
# =============================================================================

RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# =============================================================================
# INTEGRATION SETTINGS
# =============================================================================

# SurgiScan Platform Integration
SURGISCAN_WEBHOOK_URL=https://your-surgiscan.com/api/webhooks/document-processor
SURGISCAN_API_KEY=your-surgiscan-api-key

# =============================================================================
# BACKGROUND PROCESSING (OPTIONAL)
# =============================================================================

# Redis Configuration (for async processing)
REDIS_URL=redis://localhost:6379
CELERY_BROKER_URL=redis://localhost:6379
CELERY_RESULT_BACKEND=redis://localhost:6379

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Development Database (for local development)
DEV_MONGODB_URL=mongodb://localhost:27017
DEV_DATABASE_NAME=surgiscan_documents_dev

# Test API Keys (for development/testing)
DEV_LANDING_AI_API_KEY=your-dev-landing-ai-key
DEV_OPENAI_API_KEY=your-dev-openai-key